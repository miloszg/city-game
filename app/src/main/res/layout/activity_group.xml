<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewGroupGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45px"
            android:text="Stwórz własną trasę. Zaznacz punkty na mapie i dodaj pytania do quizu dla każdego punktu. Punkty na mapie dodajemy przez dłuższe przytrzymanie określonego miejsca na mapie." />

        <Button
            android:id="@+id/btnCreatePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="16dp"
            android:text="Dodaj stworzoną ścieżkę"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <org.osmdroid.views.MapView
                android:id="@+id/chooseMapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></org.osmdroid.views.MapView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>